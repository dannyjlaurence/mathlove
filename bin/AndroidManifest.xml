<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neonbats.mathlove"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.neonbats.mathlove.MainFractalMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neonbats.mathlove.LessonOne"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.neonbats.mathlove.LessonOneQuiz"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.neonbats.mathlove.MainDrawing"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.neonbats.mathlove.MAINDRAWING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neonbats.mathlove.MainLesson"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.neonbats.mathlove.MAINLESSON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neonbats.mathlove.MainGallery"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.neonbats.mathlove.MAINGALLERY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
